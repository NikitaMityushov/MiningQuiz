<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiningQuiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryC</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryC</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:buttonStyle">@style/Widget.MiningQuiz.AnswerButtonsStyle</item>
    </style>

    <!-- answer buttons style -->
    <style name="Widget.MiningQuiz.AnswerButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginTop">@dimen/normal_spacing</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginEnd">@dimen/normal_spacing</item>
        <item name="android:textSize">@dimen/answer_button_text_size</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.MiningQuiz.OtherButtonsStyle" parent="Widget.MiningQuiz.AnswerButtonsStyle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Light">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>


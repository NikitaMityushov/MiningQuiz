<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiningQuiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#263238</item>
        <item name="colorPrimaryVariant">#4f5b62</item>
        <item name="colorOnPrimary">#000a12</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#263238</item>
        <item name="colorSecondaryVariant">#4f5b62</item>
        <item name="colorOnSecondary">#000a12</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:buttonStyle">@style/Widget.MiningQuiz.AnswerButtonsStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.MiningQuiz.AnswerButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginTop">@dimen/normal_spacing</item>
        <item name="android:layout_marginStart">@dimen/normal_spacing</item>
        <item name="android:layout_marginEnd">@dimen/normal_spacing</item>
        <item name="android:textSize">@dimen/answer_button_text_size</item>
    </style>

    <style name="Widget.MiningQuiz.OtherButtonsStyle" parent="Widget.MiningQuiz.AnswerButtonsStyle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Dark">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>